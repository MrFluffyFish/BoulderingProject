<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UpdateBoulder">

    <EditText
        android:id="@+id/idEdtGrade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter grade" />

    <EditText
        android:id="@+id/idEdtPosX"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter posX" />

    <EditText
        android:id="@+id/idEdtPosY"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter posY" />

    <EditText
        android:id="@+id/idEdtColour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="Enter colour" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="193dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/idCBJug"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Jugs" />

            <CheckBox
                android:id="@+id/idCBCrimp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Crimps" />

            <CheckBox
                android:id="@+id/idCBPinch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pinches" />

            <CheckBox
                android:id="@+id/idCBPocket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pockets" />

            <CheckBox
                android:id="@+id/idCBSloper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Slopers" />

            <CheckBox
                android:id="@+id/idCBSlab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Slab" />

            <CheckBox
                android:id="@+id/idCBOverhang"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Overhang" />

            <CheckBox
                android:id="@+id/idCBArete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Arete" />

            <CheckBox
                android:id="@+id/idCBVertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vertical" />

            <CheckBox
                android:id="@+id/idCBTraverse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Traverse" />

            <CheckBox
                android:id="@+id/idCBDynamic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dynamic" />

            <CheckBox
                android:id="@+id/idCBFingery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fingery" />

            <CheckBox
                android:id="@+id/idCBTechnical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Technical" />

            <CheckBox
                android:id="@+id/idCBPowerful"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Powerful" />

            <CheckBox
                android:id="@+id/idCBReachy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reachy" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/idBtnUpdateBoulder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Update Boulder"
        android:textAllCaps="false" />

    <Button
        android:id="@+id/idBtnRemoveBoulder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Remove Boulder"
        android:textAllCaps="false" />

</LinearLayout>