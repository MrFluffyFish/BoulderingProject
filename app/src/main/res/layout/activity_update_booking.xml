<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateUser">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".UpdateUser">

        <EditText
            android:id="@+id/idEdtUserID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Enter userID" />

        <EditText
            android:id="@+id/idEdtDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Enter date" />

        <EditText
            android:id="@+id/idEdtStartTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Enter start time" />

        <EditText
            android:id="@+id/idEdtSessionType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Enter session type" />

        <EditText
            android:id="@+id/idEdtPaymentType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Enter payment type" />

        <CheckBox
            android:id="@+id/idCBShoesHired"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Shoes hired" />

        <Button
            android:id="@+id/idBtnUpdateBooking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Update booking"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/idBtnRemoveBooking"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="Remove booking"
            android:textAllCaps="false" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>