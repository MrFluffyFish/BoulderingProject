<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainBooking">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".MainBooking">

        <ImageButton
            android:id="@+id/idBtnMainMenu"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="9dp"
            android:layout_marginTop="9dp"
            android:background="@drawable/layout_btn"
            android:backgroundTint="@color/dark_blue"
            app:srcCompat="@drawable/go_back" />

        <ImageView
            android:layout_height="90dp"
            android:layout_width="111dp"
            android:layout_marginTop="60dp"
            android:layout_gravity="center"
            android:background="@drawable/barcode"
            android:scaleX="1.7"
            android:scaleY="1.7"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:layout_marginStart="30dp"
            android:textSize="12pt"
            android:text="Upcoming Bookings:" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/idTVBookings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="40dp"
                android:textSize="10pt"
                android:text="" />
        </ScrollView>

        <Button
            android:id="@+id/idBtnBookingInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/red"
            android:text="Book a session"
            android:textSize="15pt"
            app:cornerRadius="15dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>